<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="199dp"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gridview_item_photo"
        android:background="#000000"
        android:layout_width="199dp"
        android:layout_height="130dp" />
    <TextView
        android:id="@+id/gridview_item_tile"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="这里是标题"
        android:gravity="left"/>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/heart"/>
        <TextView
            android:id="@+id/gridview_item_applications"
            android:textColor="@color/pink"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150人参与战斗"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gridview_item_daysLeft"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="剩余天数"/>
        <TextView
            android:id="@+id/gridview_item_award1"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="鼓励奖"/>
        <TextView
            android:id="@+id/gridview_item_award2"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="优胜奖"/>
    </LinearLayout>


</LinearLayout>
